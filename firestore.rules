rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read and write to the "scores" collection
    match /scores/{scoreId} {
      allow read, write: if true;
    }

    // For any other collection, deny all access.
    // This is a good security practice to avoid unintended data access.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
