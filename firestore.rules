
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Par défaut, refuser l'accès à toutes les collections
    match /{document=**} {
      allow read, write: if false;
    }

    // Autoriser la lecture et l'écriture pour la collection "scores"
    match /scores/{scoreId} {
      allow read, write: if true;
    }
  }
}
